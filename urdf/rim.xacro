<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <!-- Include Roller Macro -->
  <xacro:include filename="roller.xacro" />

  <!-- Macro for Rim Link and Joint with Rollers -->
  <xacro:macro name="rim" params="prefix x y z roll pitch yaw">
    <!-- Rim Link -->
    <link name="${prefix}_rim">
      <inertial>
        <origin xyz="0 -1.1102E-16 0.013812" rpy="0 0 0" />
        <mass value="0.045828" />
        <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0002" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://car_4wd/meshes/rim.STL" />
        </geometry>
        <material name="">
          <color rgba="0.79216 0.81961 0.93333 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://car_4wd/meshes/rim.STL" />
        </geometry>
      </collision>
    </link>

    <!-- Rim Joint -->
    <joint name="${prefix}_rim_joint" type="continuous">
      <origin xyz="${x} ${y} ${z}" rpy="${roll} ${pitch} ${yaw}" />
      <parent link="base_link" />
      <child link="${prefix}_rim" />
      <axis xyz="0 0 -1" />
      <dynamics damping="0.01" friction="0.01" />
    </joint>

    <!-- Rollers for this Rim -->
    <xacro:roller name="e" prefix="${prefix}" parent_link="${prefix}_rim" x="-0.027497" y="0.00039526" z="0.0045" roll="1.5708" pitch="0" yaw="3.1272" />
    <xacro:roller name="ne" prefix="${prefix}" parent_link="${prefix}_rim" x="-0.019164" y="0.019723" z="0.0235" roll="1.5708" pitch="0" yaw="2.3418" />
    <xacro:roller name="n" prefix="${prefix}" parent_link="${prefix}_rim" x="0.00039526" y="0.027497" z="0.0045" roll="1.5708" pitch="0" yaw="1.5564" />
    <xacro:roller name="nw" prefix="${prefix}" parent_link="${prefix}_rim" x="0.019723" y="0.019164" z="0.0235" roll="1.5708" pitch="0" yaw="0.77102" />
    <xacro:roller name="w" prefix="${prefix}" parent_link="${prefix}_rim" x="0.027497" y="-0.00039526" z="0.0045" roll="1.5708" pitch="0" yaw="-0.014374" />
    <xacro:roller name="sw" prefix="${prefix}" parent_link="${prefix}_rim" x="0.019164" y="-0.019723" z="0.0235" roll="1.5708" pitch="0" yaw="-0.79977" />
    <xacro:roller name="s" prefix="${prefix}" parent_link="${prefix}_rim" x="-0.00039526" y="-0.027497" z="0.0045" roll="1.5708" pitch="0" yaw="-1.5852" />
    <xacro:roller name="se" prefix="${prefix}" parent_link="${prefix}_rim" x="-0.019723" y="-0.019164" z="0.0235" roll="1.5708" pitch="0" yaw="-2.3706" />
  </xacro:macro>
</robot>